{
	"name": "jest-svelte",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"cypress": "npx cypress open",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "npx husky install",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write --config .prettierrc .",
		"format:commit": "prettier --write --config .prettierrc",
		"lint": "prettier --check --config .prettierrc . && eslint ./src --fix --config .eslint.config.js",
		"lint:commit": "prettier --check --config .prettierrc && eslint --fix --config .eslint.config.js",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run"
	},
	"lint-staged": {
		"src/**/*.{js,ts,svelte}": [
			"npm run format:commit",
			"npm run lint:commit"
		],
		"cypress/**/*.{js,ts}": [
			"npm run format:commit"
		]
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.5",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@fontsource/fira-mono": "^5.0.0",
		"@neoconfetti/svelte": "^2.0.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.4",
		"@testing-library/user-event": "^14.6.1",
		"@vitest/browser": "^3.0.8",
		"@vitest/coverage-v8": "^3.0.8",
		"dotenv": "^16.4.7",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-cypress": "^4.2.0",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jsdom": "^26.0.0",
		"lint-staged": "^15.4.3",
		"playwright": "^1.51.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"cypress": "^14.1.0"
	}
}
